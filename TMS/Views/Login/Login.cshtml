@model LoginModel
@{
    ViewData["Title"] = "Login Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - TMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <style>
        body {
            height: 100%;
        }

        a {
            font-size: 0.7em;
            font-family: Arial, Helvetica, sans-serif;
            text-decoration: none;
            text-decoration-line: underline;
            text-decoration-style: dotted;
            color: slategrey;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row" style="height:200px;">
        </div>
        <div class="row">            
            <div class="col-8">
                <span style="font-family: 'Montserrat', sans-serif; font-size:26px;">LexiDesk Login</span>
                <h4 class="text-danger">@Html.ValidationMessage("error")</h4>
                <div class="border rounded-2 bg-light m-3 p-0" style="width: 1200px; white-space:nowrap !important ;">
                    <div class="d-inline-block border mx-2 px-3" style="vertical-align: middle;">
                        <div class="text-center my-2"><i class="fas fa-headset fa-2x" style="color: aqua"></i></div>
                        <form id="login-form" class="" asp-controller="Login" asp-action="PerformLogin" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <h4 class="text-danger">@Html.ValidationMessage("loginerror")</h4>
                            <div class="my-2">
                                <label asp-for="Username" class="">Username:</label><br>
                                <input asp-for="Username" type="text" name="username" id="username" class="form-control" required>
                            </div>
                            <div class="my-2">
                                <label asp-for="Password" class="">Password:</label><br>
                                <input asp-for="Password" type="password" name="password" id="password" class="form-control" required>
                            </div>
                            <div class="my-4">
                                <input type="submit" name="submit" class="btn btn-dark btn-md w-50" value="Login">
                            </div>
                        </form>
                    </div>
                    <div class="d-inline-block">
                        <img src="~/lib/r.jpg">
                    </div>
                </div>
            </div>           
        </div>
    </div>
</body>
</html>

