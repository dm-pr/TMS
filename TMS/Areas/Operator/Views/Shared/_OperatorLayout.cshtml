@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TMS - Operator</title>
    <!-- bootstrap 5 css -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome css -->
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <!-- custom css -->
    <link href="~/css/sidebars.css" rel="stylesheet" />
    <link href="~/css/schedule.css" rel="stylesheet" />
    <!-- js -->
    <script src="/js/opcalls.js"></script>
</head>

<body>

    <div class="d-flex flex-column p-2 text-white" style="width: 280px; background-color: rgb(168 158 120)">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
            <span class="fs-4">
                Operator Area                
            </span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="start" asp-action="start">
                    <i class="fas fa-home"></i>
                    Start
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="report" asp-action="start">
                    <i class="fas fa-clipboard-list"></i>
                    Reports
                </a>
            </li>            
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="start" asp-action="logout">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </li>
        </ul>

        <hr>
        
    </div>

    <div class="b-example-divider"></div>

    <main class="d-flex">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</body>
</html>