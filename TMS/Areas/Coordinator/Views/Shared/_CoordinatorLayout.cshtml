@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TMS - Coordinator</title>
    <!-- bootstrap 5 css -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome css -->
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <!-- custom css -->
    <link href="~/css/sidebars.css" rel="stylesheet" />
    <link href="~/css/schedule.css" rel="stylesheet" />
    <!-- js -->
    <script src="~/lib/chart.js/dist/chart.min.js"></script>
    <script src="~/js/cocalls.js"></script>

    
</head>

<body>

    <div class="d-flex flex-column p-2 text-white bg-secondary" style="width: 280px;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
            <span class="fs-4">
                Coordinator Area
            </span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="start" asp-action="start">
                    <i class="fas fa-home"></i>
                    Start
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-controller="newticket" asp-action="start">
                    <i class="fas fa-plus-square"></i>
                    Add New Ticket
                </a>
            </li>
            <li>

                <a class="nav-link text-white" asp-controller="operatorschedule" asp-action="start">
                    <i class="fas fa-clipboard-list"></i>
                    Operators and Schedule
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-controller="start" asp-action="logout">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </li>
        </ul>
        <hr>
        <div class="row">
            <div class="col-12">
                <div class="card m-4 bg-body" style="height: 200px;">
                    <div class="card-header small p-1"><span id="queueTitleCount" style="color: darkgray;">To assign: 0</span></div>
                    <div class="card-body overflow-auto">
                        <ul class="list-group small" id="queueTicketList">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="b-example-divider"></div>

    <main class="d-flex ">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    
</body>
</html>